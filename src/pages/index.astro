---
import Projects from "@components/content/Projects.astro";
import Layout from "@layouts/Layout.astro";
import Overview from "@src/components/content/Overview.astro";
import About from "@src/components/content/About.astro";
import Rodo from "@src/components/content/Rodo.astro";
import Education from "@src/components/content/Education.astro";
import WorkExperience from "@src/components/content/WorkExperience.astro";
import Skills from "@src/components/content/Skills.astro";
import Awards from "@src/components/content/Awards.astro";
import AdditionalActivity from "@src/components/content/AdditionalActivity.astro";
import Certifications from "@src/components/content/Certifications.astro";
---

<Layout>
  <Overview />
  <About class="py-4" />
  <Education class="content-section" />
  <WorkExperience class="content-section" />
  <Skills class="content-section" />
  <Projects class="content-section" />
  <Certifications class="content-section" />
  <Awards class="content-section" />
  <AdditionalActivity class="content-section" />
  <Rodo class="content-section" />
</Layout>

<style>
  .content-section {
    padding-block: calc(var(--spacing) * 4);
    border-color: var(--gray-900);
    border-top-style: var(--tw-border-style);
    border-top-width: 1px;
    initial-value: solid;
    display: flex;
    flex-direction: column;
    gap: calc(2 * var(--spacing));
    /* break-inside: avoid; TODO: consider this one */
  }
</style>
