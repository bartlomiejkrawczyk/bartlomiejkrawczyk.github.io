---
import type { HTMLAttributes } from "astro/types";
import EducationElement from "./EducationElement.astro";

interface Props extends HTMLAttributes<"div"> {}

const { ...props } = Astro.props;
---

<div {...props}>
  <h2 class="pb-1">Education</h2>
  <EducationElement
    class="py-1"
    university="Warsaw University of Technology"
    period="February 2024 - September 2025"
    link="https://www.elka.pw.edu.pl/Wydzial"
    subject="Computer Science"
    degree="Master's Degree"
    specialization="Intelligent Systems"
    average={4.92}
    subjects={[
      "Niezawdone, Skalowalne i Łatwe w Utrzymaniu Systemy Informatyczne",
      "Programowanie Równoległe i Rozproszone",
      "Architektura i Integracja Systemów",
      "Sieci Inteligentnych Urządzeń",
      "Wirtualne Środowiska Obliczeniowe",
      "Robotyka",
    ]}
  />
  <EducationElement
    class="py-1"
    university="Warsaw University of Technology"
    period="October 2020 - February 2024"
    link="https://www.elka.pw.edu.pl/Wydzial"
    subject="Computer Science"
    degree="Bachelor's Degree"
    specialization="Software Engineering"
    average={4.96}
    subjects={[
      "Algorytmy i Struktury Danych",
      "Systemy Oepracyjne",
      "Programowanie Aplikacyjne - Java",
      "Programowanie Obiektowe - C++",
      "Wprowadzenie do Sztucznych Inteligencji",
      "Inżynieria Uczenia Maszynowego",
      "Bazy Danych",
      "Sztuka Wytwarzania Oprogramowania",
      "Sterowniki Programowalne",
      "System UNIX",
      "Paradygmaty Programowania",
      "Programowanie Aplikacji Internetowych",
      "Techniki Kompilacji",
      "Programowanie Sieciowe",
      "Wdrażanie i Utrzymanie Systemów Informatycznych",
    ]}
  />
  <EducationElement
    class="py-1"
    university="Liceum Ogólnokształcące im. Bolesława Prusa"
    period="September 2017 - June 2020"
    link="https://loprus.pl/"
    specialization="Computer Science, Math, English, Physics"
  />
</div>
