---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {
  period: string;
  description: string;
  link?: string;
  organization?: string;
}

const { period, description, link, organization, ...props } = Astro.props;
---

<div {...props}>
  <div class="flex">
    <h3 class="flex-1"><a href={link} target="_blank">{description}</a></h3>
    <span>{period}</span>
  </div>
  {organization ? <div>{organization}</div> : null}
</div>
