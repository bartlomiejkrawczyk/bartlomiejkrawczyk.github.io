---
import { Image } from "astro:assets";
import Icon from "../Icon.astro";
import type { HTMLAttributes } from "astro/types";
import logo from "@assets/logo-2.jpg";
import logoJapan from "@assets/logo-japan.jpg";
import { getTranslations } from "@src/i18n/ui";

interface Props extends HTMLAttributes<"div"> {}

const { ...props } = Astro.props;

const lang = Astro.currentLocale;
const t = getTranslations(lang);
---

<div
  id="overview"
  class="flex flex-col-reverse sm:flex-row sm:items-start gap-4"
  {...props}
>
  <div class="flex-1 space-y-1.5">
    <h1>Bartłomiej Krawczyk</h1>
    <p>{t.overview.role}</p>
    <a
      href="https://maps.app.goo.gl/UhjS3b31uSSrucAj8"
      target="_blank"
      class="flex"
    >
      <Icon gradient icon="globe-world" size="22px" />
      <span class="ml-1">{t.overview.city}</span>
    </a>
    <a
      href="tel:+48691177733"
      target="_blank"
      rel="noopener noreferrer"
      class="flex"
    >
      <Icon gradient icon="phone" size="22px" />
      <span class="ml-1">+48 691 177 733</span>
    </a>
    <a
      href="https://bartlomiejkrawczyk.github.io"
      target="_blank"
      rel="noopener noreferrer"
      class="flex"
    >
      <Icon gradient icon="globe" size="22px" />
      <span class="ml-1">bartlomiejkrawczyk.github.io</span>
    </a>
    <a
      href="https://github.com/bartlomiejkrawczyk"
      target="_blank"
      rel="noopener noreferrer"
      class="flex"
    >
      <Icon gradient icon="github-logo" size="22px" />
      <span class="ml-1">bartlomiejkrawczyk</span>
    </a>
    <a
      href="mailto:bartlomiejkrawczyk01@gmail.com"
      target="_blank"
      rel="noopener noreferrer"
      class="flex"
    >
      <Icon gradient icon="envelope" size="22px" />
      <span class="ml-1">bartlomiejkrawczyk01@gmail.com</span>
    </a>
  </div>
  <span
    class="relative flex items-center justify-center shrink-0 overflow-hidden
      rounded-xl max-w-6/12 sm:w-55 sm:h-55 bg-(--gray-900) mx-auto sm:mx-0"
  >
    <span
      id="fallback"
      class="absolute inset-0 flex items-center justify-center text-3xl"
    >
    </span>
    <Image
      src={logo}
      width={500}
      height={500}
      class:list={"only-print"}
      alt="Bartłomiej Krawczyk - personal image"
    />
    <Image
      src={logoJapan}
      width={500}
      height={500}
      class:list={"no-print"}
      alt="Bartłomiej Krawczyk - personal image"
    />
  </span>
</div>
