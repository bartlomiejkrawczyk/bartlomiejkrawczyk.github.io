---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src?: ImageMetadata;
  srcLocation?: string;
  alt: string;
  caption?: string;
  width?: string;
  optimize: boolean;
}

const {
  src,
  srcLocation,
  alt,
  caption = alt,
  width = "50%",
  optimize = true,
} = Astro.props;
---

<figure
  style={`display: flex; flex-direction: column; align-items: center; margin: 1.5rem auto;`}
>
  {
    optimize ? (
      src && (
        <Image
          src={src}
          alt={alt}
          class="figure-image"
          style={`width:${width};`}
        />
      )
    ) : (
      <img
        src={srcLocation}
        alt={alt}
        class="figure-image"
        style={`width:${width};`}
      />
    )
  }
  {caption && <figcaption class="figure-caption">{caption}</figcaption>}
</figure>

<style>
  .figure-image {
    border-radius: 0.5rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--gray-800);
    transition:
      transform 1s ease,
      box-shadow 1s ease;
  }

  .figure-image:hover {
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    box-shadow: var(--shadow-md);
  }

  .figure-caption {
    margin-top: 0.5rem;
    text-align: center;
    font-size: var(--text-md);
  }
</style>
